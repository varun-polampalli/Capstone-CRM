apiVersion: v1
kind: Pod
metadata:
  name: multi-container-pod
spec:
  containers:
    - name: mysql-container
      image: mysql:8
      env:
        - name: MYSQL_ROOT_PASSWORD
          value: root
        - name: MYSQL_DATABASE
          value: capstone
        - name: MYSQL_USER
          value: varun
        - name: MYSQL_PASSWORD
          value: mysql123@
      ports:
        - containerPort: 3306

    - name: capstone-app-container
      image: capstone-crm
      env:
        - name: SPRING_DATASOURCE_URL
          value: jdbc:mysql://localhost:3306/capstone
        - name: SPRING_DATASOURCE_USERNAME
          value: varun
        - name: SPRING_DATASOURCE_PASSWORD
          value: mysql123@
      ports:
        - containerPort: 8080

    - name: nodejs-app-container
      image: front
      ports:
        - containerPort: 3000

